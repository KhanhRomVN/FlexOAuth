{
    "manifest_version": 3,
    "name": "FlexBookmark",
    "version": "1.1.0",
    "description": "Advanced bookmark management with modern UI",
    "icons": {
      "128": "icon.png"
    },
    "permissions": [
      "bookmarks",
      "storage",
      "tabs",
      "identity"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "assets/background.js",
      "type": "module"
    },
    "chrome_url_overrides": {
      "newtab": "index.html"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }